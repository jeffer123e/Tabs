<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_on_primary">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabjuegos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista juegos"
            android:icon="@drawable/icono_lista"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabinformacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="informacion"
            android:icon="@drawable/icono_informacion"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabusuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:icon="@drawable/icono_usuario"/>

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/tabviewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>
</LinearLayout>